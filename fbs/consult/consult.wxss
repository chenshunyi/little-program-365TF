page {
  background-color: #efeff4;
}

.topContent {
  background-color: #fff;
}

.featureTip {
  padding: 0rpx 28rpx;
  height: 84rpx;
  background: #f9f9f9;
  display: flex;
  align-items: center;
}

.featureTip .text {
  font-size: 26rpx;
  color: #d3b076;
  display: inline-flex;
}

.featureTip .icon {
  display: block;
  background: url('data:image/png;base64,') no-repeat left center;
  background-size: 30rpx;
  padding-left: 40rpx;
}

.formGroup {
  margin: 0rpx 25rpx;
}

.formGroup .describe {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 5;
}

.formGroup .describe .payTip {
  font-size: 30rpx;
  color: #dd2628;
  margin-right: 12rpx
}

.formGroup .describe .payDes {
  font-size: 22rpx;
  color: #8a8a8a;
}

.formGroup .wordLengthDetect {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: right;
  font-size: 26rpx;
  color: #aaa;
  flex: 1;
}

.placeholder {
  color: #8a8a8a;
}

.formGroup .contentInput {
  width: 100%;
  height: 350rpx;
  font-size: 30rpx;
  color: #404040;
  padding-top: 40rpx;
  line-height: 14rpx;
}

.picGroup {
  padding: 40rpx 25rpx 82rpx 25rpx;
}

.picItem {
  position: relative;
  margin-right: 16rpx;
}

.uploadMask {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 6rpx;
}

.picItem .picDel {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  z-index: 1;
  width: 30rpx;
  height: 30rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
}

.picItem .pic {
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 6rpx;
}

.btnUpload {
  width: 160rpx;
  height: 160rpx;
  background: #f6f6f6 url(data:image/png;base64,) center center no-repeat;
  background-size: 160rpx 160rpx;
  border-radius: 6rpx;
}

.uploadState {
  font-size: 24rpx;
  color: #999;
}

.btnView {
  background-color: #efeff4;
  padding-top: 30rpx;
  
}

.btnSubmit {
  margin: 0rpx 50rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  background-color: #d3a252;
  border-radius: 10rpx;
}

.uploadMask .errorMsg {
  font-size: 24rpx;
  color: #fff;
}

.loading {
  position: relative;
  margin: 0 auto;
  width: 62.5rpx;
  height: 62.5rpx;
}

.loading .circle {
  position: absolute;
  width: 12.5rpx;
  height: 12.5rpx;
  background-color: #fff;
  border-radius: 50%;
  -webkit-animation: loading 1.04s ease infinite;
  animation: loading 1.04s ease infinite;
}

@-webkit-keyframes loading {
  0% {
    -webkit-transform: scale(1.2);
    transform: scale(1.2);
    opacity: 1;
  }

  100% {
    -webkit-transform: scale(0.3);
    transform: scale(0.3);
    opacity: 0.5;
  }
}

@keyframes loading {
  0% {
    -webkit-transform: scale(1.2);
    transform: scale(1.2);
    opacity: 1;
  }

  100% {
    -webkit-transform: scale(0.3);
    transform: scale(0.3);
    opacity: 0.5;
  }
}

.loading .circle:nth-child(1) {
  top: 50%;
  left: 0;
  margin-top: -6.25rpx;
  -webkit-animation-delay: 0.13s;
  animation-delay: 0.13s;
}

.loading .circle:nth-child(2) {
  top: 8.75rpx;
  left: 8.75rpx;
  -webkit-animation-delay: 0.26s;
  animation-delay: 0.26s;
}

.loading .circle:nth-child(3) {
  top: 0;
  left: 50%;
  margin-left: -6.25rpx;
  -webkit-animation-delay: 0.39s;
  animation-delay: 0.39s;
}

.loading .circle:nth-child(4) {
  top: 8.75rpx;
  right: 8.75rpx;
  -webkit-animation-delay: 0.52s;
  animation-delay: 0.52s;
}

.loading .circle:nth-child(5) {
  top: 50%;
  right: 0;
  margin-top: -6.25rpx;
  -webkit-animation-delay: 0.65s;
  animation-delay: 0.65s;
}

.loading .circle:nth-child(6) {
  right: 8.75rpx;
  bottom: 8.75rpx;
  -webkit-animation-delay: 0.78s;
  animation-delay: 0.78s;
}

.loading .circle:nth-child(7) {
  bottom: 0;
  left: 50%;
  margin-left: -6.25rpx;
  -webkit-animation-delay: 0.91s;
  animation-delay: 0.91s;
}

.loading .circle:nth-child(8) {
  bottom: 8.75rpx;
  left: 8.75rpx;
  -webkit-animation-delay: 1.04s;
  animation-delay: 1.04s;
}
