.loginUser {
  padding-left: 25rpx;
  background: #d3a252;
}

.loginUser .text {
  font-size: 32rpx;
  color: #fff;
}

.loginUser .icon {
  background: url('data:image/png;base64,') no-repeat left center;
  background-size: 40rpx;
  padding-left: 52rpx;
}

.unpaid {
  background: #fff;
  border-width: 1rpx;
  border-style: solid;
  border-color: #d3a252;
  border-radius: 4rpx;
  padding: 0rpx 10rpx;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #d3a252;
}

.solved {
  background: #fff;
  border-width: 1rpx;
  border-style: solid;
  border-color: #508df1;
  border-radius: 4rpx;
  padding: 0rpx 10rpx;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #508df1;
}

.unsolved {
  background: #fff;
  border-width: 1rpx;
  border-style: solid;
  border-color: #ff392f;
  border-radius: 4rpx;
  text-align: ccenter;
  padding: 0rpx 10rpx;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #ff392f;
}

.loginBtn {
  height: 88rpx;
  width: 346rpx;
  background: #fff;
  text-align: center;
  border-width: 1rpx;
  border-style: solid;
  border-color: #d3a252;
  border-radius: 10rpx;
  padding: 0rpx 10rpx;
  margin-bottom: 25rpx;
  font-size: 36rpx;
  color: #d3a252;
}

.questionDesc {
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
