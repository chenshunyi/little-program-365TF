page {
  background-color: #EBEAF2;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.container{
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
}

.fbsInfoHeadView{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-left: 0;
  margin-right: 0;
}

.fbsInfoView{
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: #d3a252;
  height: 224rpx;
}

.photoImage{
  width: 150rpx;
  height: 150rpx;
  margin-left: 28rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  border-radius: 75rpx;
}

.fbsInfoHeadRightView{
  display: flex;
  flex-direction: column;
  margin-top: 0rpx;
  margin-right: 24rpx;
  margin-bottom: 16rpx;
}

.fbsNameView{
  margin-top: 0rpx;
  color: white;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.fbsProfessionalView{
  margin-bottom: 10rpx;
  color: white;
  font-size: 28rpx;
}

.fbsTagView{
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-content: flex-start;
}

.fbsTagItemView{
  color: white;
  font-size: 22rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
  margin-bottom: 10rpx;
  border-width: 1rpx;
  border-style: solid;
  border-color: white;
}

.fbsIntroView{
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
}

.introView1{
  margin-left: 28rpx;
  margin-right: 28rpx;
  margin-top: 40rpx;
  font-size: 30rpx;
  color: #404040;
  font-weight:bold;
  margin-bottom: 30rpx;
}

.introView2{
  margin-left: 28rpx;
  margin-right: 28rpx;
  font-size: 28rpx;
  color: #404040;
  margin-bottom: 40rpx;
}

.fbsAskListView{
  margin-top: 12rpx;
  margin-left: 0;
  margin-right: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.askRecordhHeadView{
  border-left-color: #d3a252;
  border-left-width: 4rpx;
  border-left-style: solid;

  border-bottom-color: #d9d9d9;
  border-bottom-width: 1rpx;
  border-bottom-style: solid;
  
  width: 100%;
  height: 84rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.askRecordText{
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  margin-left: 28rpx;
  margin-right: 10rpx;
  font-size: 30rpx;
  color: #404040;
}

.askRecordNumText{
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  font-size: 30rpx;
  color: #8a8a8a;
}

.tableView{
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
}

.listCell{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-left: 0;
  margin-right: 0;
  border-bottom-color: #EBEAF2;
  border-bottom-width: 10rpx;
  border-bottom-style: solid;
}

.wdAskText {
  margin-left: 28rpx;
  margin-right: 28rpx;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #242424;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.wdAnswerText {
  margin-left: 28rpx;
  margin-right: 28rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #8a8a8a;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.otherInfoContent {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  height: 90rpx;
}

.otherTime {
  margin-left: 28rpx;
   margin-top: 30rpx;
  margin-bottom: 40rpx;
  font-size: 26rpx;
  color: #8a8a8a;
}

.otherDZ{
  margin-right: 28rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.otherDZ_image {

  height: 40rpx;
  width: 18rpx;
}

.otherDZ_Number {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #8a8a8a;
}

.otherDZ_Number_HasDZ {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #d3a252;
}


.bottomAskView{
  position: fixed;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  height: 100rpx;
  background-color: #d3a252;
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  vertical-align: middle;
  text-align: center;
  line-height: 100rpx;
}

.no-more{
  border-bottom-color: #EBEAF2;
  border-bottom-width: 100rpx;
  border-bottom-style: solid;
  background-color: #EBEAF2;
}

.nodata{
  background-color: #EBEAF2;
}